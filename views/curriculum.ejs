					</ul>
				</div>
					</div>
					<% Object.keys(cv).map(function(key) { %>
						<div class="main-text-curriculum">
							<h3 class="curriculum-flex-year"><time datetime="<%=cv[key].year %>"><%= cv[key].year %></time></h3>
							<div class="curriculum-flex-happened">
							<% 
								cv[key].happened.reverse().map(function(happen){ %>
								<p class="curriculum-flex-happened-item"><%- happen %></p>
					<% }) %>
					
					</div>
				</div>
				<% });%>
				<div>
				<h3>Want my CV?</h3>
					<p><span class="accent-white">There you go:</span> in <a href="../assets/files/Balint_Ferencz_CV_HU_2023_febr.pdf">Hungarian</a> and in <a href="../assets/files/Balint_Ferencz_CV_EN_2023_febr.pdf">English</a></p>
				</div>
			</article>
			<%- include('./partials/research-fields.ejs') %>
			<%- include('./partials/social-row.ejs') %>
			<%- include('./partials/footer.ejs') %>
